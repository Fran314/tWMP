<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditWeekActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.baldino.myapp003.custom_views.EditableDayMealsView
                        android:id="@+id/editable_monday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.baldino.myapp003.custom_views.EditableDayMealsView
                        android:id="@+id/editable_tuesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.baldino.myapp003.custom_views.EditableDayMealsView
                        android:id="@+id/editable_wednesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.baldino.myapp003.custom_views.EditableDayMealsView
                        android:id="@+id/editable_thursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.baldino.myapp003.custom_views.EditableDayMealsView
                        android:id="@+id/editable_friday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.baldino.myapp003.custom_views.EditableDayMealsView
                        android:id="@+id/editable_saturday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.baldino.myapp003.custom_views.EditableDayMealsView
                        android:id="@+id/editable_sunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>